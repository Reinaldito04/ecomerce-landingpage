export async function getStaticPaths() {
  const pages = [
    {
      slug: undefined,
      title: "Tienda de Astro",
      text: "Â¡Te damos la bienvenida a la tienda de Astro!",
    },
    
    {
      slug: "products/Laptop",
      title: "Laptop ",
      descripcion: "La Mejor Laptop Gaming del mercado",
      precio :"500.99$",

    },
  ];
  return pages.map(({ slug, title, descripcion,precio }) => {
    return {
      params: { slug },
      props: { title, descripcion,precio },
    };
  });
}
